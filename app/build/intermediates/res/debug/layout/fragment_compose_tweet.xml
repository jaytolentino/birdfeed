<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.birdfeed.fragments.ComposeTweetFragment">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/etComposeTweet"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="@string/hint_tweet"
        android:layout_toLeftOf="@+id/btnSendTweet"
        android:layout_toStartOf="@+id/btnSendTweet" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_tweet"
        android:id="@+id/btnSendTweet"
        android:layout_alignBottom="@+id/etComposeTweet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_counter"
        android:id="@+id/tvCounter"
        android:layout_below="@+id/etComposeTweet"
        android:layout_toLeftOf="@+id/btnSendTweet"
        android:layout_toStartOf="@+id/btnSendTweet" />

</RelativeLayout>
